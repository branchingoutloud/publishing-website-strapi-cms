{
  "kind": "collectionType",
  "collectionName": "main_documents",
  "info": {
    "singularName": "main-document",
    "pluralName": "main-documents",
    "displayName": "Main Document"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "raw_text": {
      "type": "text"
    },
    "document_status": {
      "type": "enumeration",
      "enum": [
        "new",
        "processed",
        "archived"
      ]
    },
    "document_published_at": {
      "type": "datetime"
    },
    "source_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::source.source",
      "inversedBy": "main_documents"
    },
    "topic_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::topic.topic",
      "inversedBy": "main_documents"
    },
    "newsletter_documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::newsletter-document.newsletter-document",
      "mappedBy": "main_document_id"
    },
    "draft_documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::draft-document.draft-document",
      "mappedBy": "main_document_id"
    }
  }
}
