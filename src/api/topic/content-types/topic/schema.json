{
  "kind": "collectionType",
  "collectionName": "topics",
  "info": {
    "singularName": "topic",
    "pluralName": "topics",
    "displayName": "topic"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "topic_status": {
      "type": "string"
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag",
      "mappedBy": "topic_id"
    },
    "drafts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::draft.draft",
      "mappedBy": "topic_id"
    },
    "newsletters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::newsletter.newsletter",
      "mappedBy": "topic_id"
    },
    "main_documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::main-document.main-document",
      "mappedBy": "topic_id"
    },
    "resources": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::resource.resource",
      "mappedBy": "topic_id"
    }
  }
}
